PREFER_32=0
for arg
do
  if [ "$arg" = "-32" ]; then
    PREFER_32=1
  fi
done

if [ $PREFER_32 = 1 ]; then 
  DYLD_LIBRARY_PATH=/Applications/itt/idl/bin/bin.darwin.i386
  $RIDL_DIR/src/bin.darwin.i386/ridl
else
  DYLD_LIBRARY_PATH=/Applications/itt/idl/bin/bin.darwin.x86_64
  $RIDL_DIR/src/bin.darwin.x86_64/ridl
fi
