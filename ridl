PREFER_32=0
OS=`uname -s | tr [A-Z] [a-z]`

for arg
do
  if [ "$arg" = "-32" ]; then
    PREFER_32=1
  fi
done

export IDL_DIR=/Applications/itt/idl/idl

if [ $PREFER_32 = 1 ]; then 
  DYLD_LIBRARY_PATH=/Applications/itt/idl/idl/bin/bin.$OS.i386
  $RIDL_DIR/src/bin.$OS.i386/ridl $@
else
  DYLD_LIBRARY_PATH=/Applications/itt/idl/idl/bin/bin.$OS.x86_64
  $RIDL_DIR/src/bin.$OS.x86_64/ridl $@
fi
