#!/usr/bin/env sh

PREFER_32=@rIDL_PREFER_32@
OS=`uname -s | tr [A-Z] [a-z] | tr '[A-Z]' '[a-z]'`

for arg
do
  if [ "$arg" = "-32" ]; then
    PREFER_32=1
  fi
done

export IDL_DIR=${Idl_ROOT}

if [ $PREFER_32 = 1 ]; then 
  export @rIDL_LIBRARY_PATH@=@Idl_LIBRARY_PATH@:$@rIDL_LIBRARY_PATH@
  @CMAKE_INSTALL_PREFIX@/bin/ridl $@
else
  export @rIDL_LIBRARY_PATH@=@Idl_LIBRARY_PATH@:$@rIDL_LIBRARY_PATH@
  @CMAKE_INSTALL_PREFIX@/bin/ridl $@
fi
