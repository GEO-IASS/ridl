#!/usr/bin/env sh

PREFER_32=@rIDL_PREFER_32@
OS=`uname -s | tr [A-Z] [a-z] | tr '[A-Z]' '[a-z]'`

for arg
do
  if [ "$arg" = "-32" ]; then
    PREFER_32=1
  fi
done

export IDL_DIR=${IDL_DIR}

if [ $PREFER_32 = 1 ]; then 
  export @rIDL_LIBRARY_PATH@=$IDL_DIR/@IDL_BIN32_PATH@:$@rIDL_LIBRARY_PATH@
  @CMAKE_INSTALL_PREFIX@/@IDL_BIN32_PATH@/ridl $@
else
  export @rIDL_LIBRARY_PATH@=$IDL_DIR/@IDL_BIN64_PATH@:$@rIDL_LIBRARY_PATH@
  @CMAKE_INSTALL_PREFIX@/@IDL_BIN64_PATH@/ridl $@
fi
